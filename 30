import { createClient, SupabaseClient } from '@supabase/supabase-js';

const supabaseUrl = import.meta.env.VITE_SUPABASE_URL;
const supabaseAnonKey = import.meta.env.VITE_SUPABASE_ANON_KEY;

// Função para verificar se a URL parece ser um placeholder ou inválida
const isInvalidSupabaseUrl = (url: string | undefined): boolean => {
  return !url || !url.startsWith('http');
};

let supabaseInstance: SupabaseClient | null = null;

if (isInvalidSupabaseUrl(supabaseUrl) || !supabaseAnonKey) {
  console.error(
    "ERRO: As variáveis de ambiente do Supabase (VITE_SUPABASE_URL e VITE_SUPABASE_ANON_KEY) não estão configuradas corretamente. Por favor, conecte seu projeto Supabase e preencha as credenciais no arquivo .env."
  );
} else {
  try {
    // Apenas cria o cliente se as variáveis parecerem válidas
    supabaseInstance = createClient(supabaseUrl, supabaseAnonKey);
  } catch (error) {
    console.error("Falha ao inicializar o cliente Supabase:", error);
    supabaseInstance = null; // Garante que a instância seja nula em caso de erro
  }
}

export const supabase = supabaseInstance;
